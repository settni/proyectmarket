<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <!-- Contenedor principal del mensaje (la burbuja) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:maxWidth="300dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="8dp"
        tools:backgroundTint="#E0E0E0">
        <!-- tools:backgroundTint simula el color para la vista previa -->

        <LinearLayout
            android:id="@+id/ll_bubble_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:background="@drawable/bubble_received_bg">
            <!-- NOTA: El drawable bubble_received_bg debe existir para la forma redondeada. -->

            <TextView
                android:id="@+id/tv_mensaje_contenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El contenido del mensaje del chat."
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:maxWidth="280dp"
                android:autoLink="web|email"
                tools:text="Este es un mensaje de prueba para ver cómo se ve el texto dentro de la burbuja." />

            <!-- Timestamp del mensaje (hora de envío) -->
            <TextView
                android:id="@+id/tv_mensaje_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:textSize="10sp"
                android:text="10:30 AM"
                android:textColor="#888888" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

