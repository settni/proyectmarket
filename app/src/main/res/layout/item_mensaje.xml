<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <!-- Contenedor principal del mensaje (la burbuja) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="35dp"
        android:maxWidth="300dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="8dp"
        tools:backgroundTint="#DCECFB"
        android:layout_marginVertical="2dp">


        <LinearLayout
            android:id="@+id/ll_bubble_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tv_mensaje_contenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El contenido del mensaje del chat."
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:maxWidth="280dp"
                android:justificationMode="inter_word"
                android:autoLink="web|email"
                tools:text="Este es un mensaje de prueba para ver cómo se ve el texto dentro de la burbuja, y así verificar que el contenido no se quede vacío." />

            <!-- Timestamp del mensaje (hora de envío) -->
            <TextView
                android:id="@+id/tv_mensaje_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:textSize="10sp"
                android:text="10:30 AM"
                android:textColor="#666666" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>